            android:id="@+id/timePick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="へんこう" />

        <TextView
            android:id="@+id/setMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
